  <ul class="nav nav-tabs">
    <li class="active"
    data-target="#workspaceOptionsHome"
    {{action showTab target="view"}}>
      Info
    </li>
    <li
    data-target="#workspaceOptionsUsers"
    {{action showTab target="view"}}>
      Members
    </li>
  </ul>
  <div class="clearfix"></div>
</div>
<div class="tab-content">
  <div class="tab-pane active" id="workspaceOptionsHome">
    <div class="modal-body">
