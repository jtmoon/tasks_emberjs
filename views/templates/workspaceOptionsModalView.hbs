      <button class="btn" type="button" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
  <div class="tab-pane" id="workspaceOptionsUsers">
    <div class="modal-body">
      <section class="usersInfo">
        {{App.selectedWorkspaceController.userCount}}
      </section>
      <section class="usersList">
        <section class="users">
          <ul>
            {{#each view.users}}
            {{#view App.UserView}}
            <li class="user">
              <div class="fullName">{{view.fullName}}</div>
              <div class="email">{{view.email}}</div>
              <div class="remove">
                <i class="icon-delete" {{action removeUser target="view"}}></i>
              </div>
            </li>
            {{/view}}
            {{/each}}
          </ul>
        </section>
        {{#if App.selectedWorkspaceController.hasInvites}}
        <section class="pending">
          <h3>Pending</h3>
          {{#each App.selectedWorkspaceController.invitations}}
          {{view App.ModalInviteView}}
          {{/each}}
        </section>
        {{/if}}
      </section>
      <section class="userInvite">
        {{#if App.selectedWorkspaceController.hasError}}
        <div class="errorMessage warning">
          {{App.selectedWorkspaceController.errorMessage}}
        </div>
        {{/if}}
        {{view view.inviteInputText placeholder="email@example.com"}}
        <button
        {{bindAttr disabled="view.invalidEmail" class=":btn"}}
        {{action prepInvite target="controller"}}>Send Invite</button>
      </section>
    </div>
    <div class="modal-footer">
      <button class="btn" type="button" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
</div>